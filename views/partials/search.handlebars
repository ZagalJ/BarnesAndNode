<div class="card shadow-sm">
  <div class="card-body">
              <img id="cover" src="/images/{{filename}}" alt="{{description}}">
    <p class="card-text"></p>
      <header>{{book_name}}</header>
        <header>{{author}}</header>
    <div class="d-flex justify-content-between align-items-center">
      <div class="btn-group">
        <button onclick="location.href='/books/{{id}}'" type="submit" class="btn btn-sm btn-outline-secondary">View more</button>
        <!-- <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button> -->
      </div>
      <small class="text-muted">{{stock_number}}</small>
    </div>
  </div>
</div>